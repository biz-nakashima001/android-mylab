<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:text="WorkerManager"
            android:layout_margin="16dp"
            android:textSize="32dp"/>
    <Button
            android:id="@+id/simple_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="simple"/>
    
    <Button
            android:id="@+id/deferrable_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="deferrable"/>
    
    <Button
            android:id="@+id/connected_internet_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="connected internet"/>

    <Button
            android:id="@+id/low_battery_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="low battery"/>

    <Button
            android:id="@+id/doze_mode_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="doze mode"/>

    <Button
            android:id="@+id/parallel_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="parallel"/>

    <Button
            android:id="@+id/merger_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="merger"/>

    <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="cancel"/>
    
    <Button
            android:id="@+id/interval_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="interval"/>

</androidx.appcompat.widget.LinearLayoutCompat>
